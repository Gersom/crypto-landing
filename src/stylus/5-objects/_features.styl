.features
  padding: 120px 0 155px
  position: relative
  border-bottom: 1px solid #f0f0f0

  &__title
    font-family: 'brandon_grotesquemedium'
    font-size: 55px
    font-weight: normal
    line-height: 65px
    padding-bottom: 70px
    text-align: center
    span
      color: $color-primary
  
  &__content
    display: flex
    align-items: center
    justify-content: space-between
    text-align: center

  &__item
    &__title
      font-size: 28px
      font-weight: normal
      font-family: 'proxima_novaregular'
    &__paragraph
      color: rgba(48,61,83,0.7)
      font-family: 'proxima_novaregular'
      font-size: 18px
      font-weight: normal
      line-height: 32px