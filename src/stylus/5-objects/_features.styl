.features
  padding: 120px 0 155px
  position: relative
  border-bottom: 1px solid #f0f0f0

  &__title
    font-family: 'brandon_grotesquemedium'
    font-size: 55px
    font-weight: normal
    line-height: 65px
    padding-bottom: 70px
    text-align: center
    span
      color: $color-primary
  
  &__content
    display: flex
    align-items: flex-start
    justify-content: space-between
    text-align: center

  &__image-box
    width: 218px
    height: 218px
    border-radius: 50%
    border: 2px solid #eff5fa
    margin: 0 auto
    position: relative
    display: flex
    align-items: center
    justify-content: center
    img
      display: block
  &__item
    padding-right: 15px
    padding-left: 15px
    position: relative
    width: 33.3333333%
    &__title
      font-size: 28px
      font-weight: normal
      font-family: 'proxima_novaregular'
      padding: 44px 0 20px
    &__paragraph
      color: rgba(48,61,83,0.7)
      font-family: 'proxima_novaregular'
      font-size: 18px
      font-weight: normal
      line-height: 32px
  &__item:nth-child(2n)
    &:before,
    &:after
      content: ''
      width: 120px
      height: 1px
      border-top: 1px dashed #d8e2e9
      position: absolute
      top: 29%
    &:before
      left: -60px
      @media (min-width: 992px) and (max-width: 1199px)
        width: 80px
      @media (min-width: 992px) and (max-width: 1199px)
        left: -50px
    &:after
      right: -65px
      @media (min-width: 992px) and (max-width: 1199px)
        width: 80px
      @media (min-width: 992px) and (max-width: 1199px)
        right: -50px